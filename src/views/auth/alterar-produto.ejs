<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../../css/alterar-produto.css" />
    <title>Alterar produto</title>
  </head>
  <body>
    <%- include('../components/header.ejs') %>
    <div class="form-product">
      <form action="/auth/alterar-produto/<%=produto.id%>/update?_method=PUT" method="POST">
        <h1>Alterar produto</h1>
        <label for="name">Nome</label>
        <input value="<%=produto.name%>" name="name" type="text" required />
        <label for="price">Preço</label>
        <input value="<%=produto.price%>" name="price" type="number" step="0.01" required />
        <label value="<%=produto.description%>" for="description">Descrição</label>
        <textarea name="description" id="" cols="30" rows="10"></textarea>
        <label for="cateogry">Selecione uma categoria</label>
        <select name="category" id="category">
          <% categorias.forEach(categoria => { %>
          <option value="<%=categoria.id%>"><%=categoria.name%></option>
          <% }) %>
        </select>
        <button type="submit" class="submit-button">Enviar</button>
      </form>
    </div>
    <%- include('../components/footer.ejs') %>
  </body>
</html>
