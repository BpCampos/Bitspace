<div class="listagem-produtos">
      <ul class="row-top">
        <% produtos.forEach(produto => { %>
        <li class="product-top">
            <div class="product-top-img">
            <img src=<%=produto.image%> alt="" />
            </div>
          <div class="product-top-info">
            <p><%= produto.name%></p>
            <p><%=produto.description%></p>
          </div>
          <div class="price"><%=produto.price%>R$</div>
          <form class="product-top-button" method="POST" action="/auth/lista-produtos/<%=produto.id%>/delete?_method=DELETE" >
