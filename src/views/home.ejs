<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous" />
    <link rel="stylesheet" href="css/reset.css" />
    <link rel="stylesheet" href="css/home.css" />
    <link rel="stylesheet" href="css/global.css" />
    <script src="/js/home.js" defer></script>
    <title>BitSpace</title>
  </head>
  <body>
    <header class="container">
      <div class="left-section">
        <a href="/"><img src="../../image/logo-site.png" alt="Site logo" /></a>
      </div>
      <form class="middle-section" action="/Listagem-Produtos">
        <input type="search" placeholder="Pesquisar" id="search" name="search" />
        <button type="submit">
          <img src="../../image/search.png" alt="search icon" />
        </button>
      </form>
      <div class="right-section">
        <ul class="hamburguer-nav">
          <li class="nav-item"><a href="#">Carrinho</a></li>
          <li class="nav-item"><a href="#">Minha conta</a></li>
          <li class="nav-item"><a href="#">Login/Cadastro</a></li>
        </ul>
        <div class="hamburguer">
          <span class="bar"></span>
          <span class="bar"></span>
          <span class="bar"></span>
        </div>
        <div class="right-section-text">
          <% if(!locals.isLogged){ %>
          <div class="loginArea">
            <a href="/pagina-login"><p class="login">Login</p></a>
            <p>-</p>
            <a href="./Pagina-Cadastro"><p class="signIn">Cadastro</p></a>
          </div>
          <% } else { %>
          <div class="userArea">
            <a href="/painelDoUsuario"><p class="conta">Minha conta</p></a>
            <p>-</p>
            <a href="/logout"><p class="logout">Sair</p></a>
          </div>
          <% } %>
        </div>
        <img src="../../image/shopping-cart.png" alt="shopping cart icon" />
      </div>
    </header>
    <main class="container">
      <nav class="navigation">
        <a href="/listagem-produtos/1"><div>Computador</div></a>
        <a href="/listagem-produtos/2"><div>Perif√©ricos</div></a>
        <a href="/listagem-produtos/3"><div>Cadeiras</div></a>
        <a href="/listagem-produtos/4"><div>Componentes</div></a>
      </nav>
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active text-center">
            <img class="w-25 p-3" src="image/1679241360550.jpg" alt="First slide" />
          </div>
          <div class="carousel-item text-center">
            <img class="w-25 p-3" src="image/1679241388201.jpg" alt="Second slide" />
          </div>
          <div class="carousel-item text-center">
            <img class="w-25 p-3" src="image/1679241291970.jpg" alt="Third slide" />
          </div>
          <div class="carousel-item text-center">
            <img class="w-25 p-3" src="image/1679241225423.jpg" alt="Third slide" />
          </div>
          <div class="carousel-item text-center">
            <img class="w-25 p-3" src="image/1679241443494.jpg" alt="Third slide" />
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
      <div class="grid">
        <% produtos.slice(0,8).forEach(produto => { %>
        <div class="card">
          <img src="<%=produto.image%>" alt="" />
          <p class="description"><%=produto.name%></p>
          <p class="price">
            <%=new Intl.NumberFormat('pt-BR', { style: 'currency', currency: 'BRL' }).format(produto.price)%>
          </p>
          <a href="detalhe-produto/<%=produto.id%>"><button>Comprar</button></a>
        </div>
        <% }) %>
      </div>
      <script
        src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
      <script
        src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
      <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>
    </main>
    <%- include('./components/footer.ejs') %>
  </body>
</html>
