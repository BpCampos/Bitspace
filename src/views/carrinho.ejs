<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="../css/reset.css" />
    <link rel="stylesheet" href="../css/global.css" />
    <link rel="stylesheet" href="../css/carrinho.css" />
    <title>Carrinho</title>
  </head>
  <body>
    <%- include('./components/header.ejs') %>

    <main class="container">
      <div class="cart">
        <div class="product">
          <% produtos.forEach(produto => { %>
            <div class="product-info">
              <section>
                <img
                  src="<%=produto.image%>"
                  alt="Placa de vÃ­deo" />
                <p class="product-name">
                  <%=produto.name%>
                </p>
              </section>
              <section class="bottom-section">
                <p>
                  Quantidade
                </p>
                  <button ><span class="material-symbols-outlined" data-button="+"> add </span></button>
                  <input data-quantity value="1" disabled></input>
                  <button ><span class="material-symbols-outlined" data-button="-"> remove </span></button>
                
                <span id="precoProduto">R$ <%=produto.price.toLocaleString('pt-BR', {minimumFractionDigits: 2})%></span>
              </section>
            </div>
         <% }) %>
        </div>
        <div class="price-info">
          <li class="info">
            <p>Subtotal</p>
            <p id="subtotal">R$ <%=produto.price%></p>
          </li>
          <li class="info">
            <p>Frete DigitalHouse</p>
            <p>Gratis</p>
          </li>
          <li class="info">
            <p>Cupom de Desconto</p>
            <p>Adicionar</p>
          </li>
          <li class="info">
            <p>Descontos</p>
            <p>R$ 0,00</p>
          </li>
          <li class="info">
            <p>Valor Total</p>
            <p id="precoFinal">R$ <%=produto.price%></p>
          </li>
          <a href="/"><button class="add-more">Escolher mais produtos</button></a>
          <form action="/finalizacaoDaCompra/<%=produto.id%>" method="POST">
            <button class="finish" type="submit">FINALIZAR</button>
          </form>
        </div>
      </div>
      <%- include('./components/footer.ejs') %>
      <script src="../js/carrinho.js"></script>
    </main>
  </body>
</html>
