<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet" />

    <link rel="stylesheet" href="./css/reset.css" />
    <link rel="stylesheet" href="./css/global.css" />
    <link rel="stylesheet" href="./css/Pagina-Login.css" />
    <title>Login</title>
  </head>
  <body>
    <%- include('./components/header.ejs') %>

    <div class="main-login">
      <div class="left-login">
        <img src="./image/undraw_Access_account_re_8spm 1.svg" class="left-img" alt="Img de login" />
      </div>
      <div class="right-login">
        <div class="card-login">
          <% if(errors !== undefined) {%>
          <ul>
            <li style="color: red"><%=errors.msg%></li>
          </ul>
          <% } %>
          <h1>LOGIN</h1>
          <form action="/Pagina-Login" method="POST">
            <div class="textfield">
              <label for="email">Email</label>
              <input type="email" name="email" id="email" placeholder="Email" />
            </div>
            <div class="textfield">
              <label for="senha">Senha</label>
              <input type="password" name="password" id="senha" placeholder="Senha" />
            </div>
            <div class="checkbox">
              <input type="checkbox" name="remember_user" id="remember_user" />
              <label for="remember_user">Lembrar usuario</label>
            </div>
            <button class="btn-login" type="submit">Login</button>
          </form>
        </div>
      </div>
    </div>

    <%- include('./components/footer.ejs') %>
  </body>
</html>
