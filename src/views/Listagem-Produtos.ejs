<div class="listagem-produtos">
  <ul class="row-top">
    <% produtos.forEach(produto => { %>
    <li class="product-top">
        <div class="product-top-img">
        <img src=<%=produto.image%> alt="" />
        </div>
      <div class="product-top-info">
        <p><%= produto.name%></p>
        <p><%=produto.description%></p>
      </div>
      <div class="price"><%=new Intl.NumberFormat('pt-BR', { style: 'currency', currency: 'BRL' }).format(produto.price)%></div>
      <form class="product-top-button">
        <a href="detalhe-produto/<%=produto.id%>"><button>Comprar</button></a>
      </form>
    </li>
    <% }) %>
</div>

